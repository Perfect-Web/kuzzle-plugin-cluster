{
  "apps": [{
      "name"         : "KuzzleServer",
      "script"       : "bin/kuzzle",
      "args"         : ["start",  "--server"],
      "watch": [
        "./lib",
        "./{lib,config,bin}/**/*",
        "../kuzzle-plugin-cluster/lib"
      ],
      "node_args": "--debug=7000"
    },
    {
      "name"         : "KuzzleWorker",
      "exec_mode"    : "cluster",
      "instances"    : 1,
      "script"       : "bin/kuzzle",
      "args"         : ["start", "--worker"],
      "watch": [
        "./lib",
        "./{lib,config,bin}/**/*",
        "../kuzzle-plugin-cluster/lib"
      ],
      "node_args": "--debug=7001"
    }
  ]
}
